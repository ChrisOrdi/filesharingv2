<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.filesharingsystem2.filesharing.ClientSyncController">

  <padding>
    <Insets top="20" left="20" right="20" bottom="20"/>
  </padding>

  <!-- Titel van het scherm -->
  <Label text="Client File Synchronization" style="-fx-font-size: 18px;" />

  <!-- Tabel voor het tonen van bestanden en hun status -->
  <TableView fx:id="fileTable" prefHeight="200" prefWidth="600">
    <columns>
      <!-- Bestandsnaam kolom -->
      <TableColumn fx:id="fileNameColumn" text="File Name" prefWidth="300">
        <cellValueFactory>
          <PropertyValueFactory property="fileName"/>
        </cellValueFactory>
      </TableColumn>

      <!-- Synchronisatiestatus kolom -->
      <TableColumn fx:id="statusColumn" text="Status" prefWidth="150">
        <cellValueFactory>
          <PropertyValueFactory property="status"/>
        </cellValueFactory>
      </TableColumn>

      <!-- Voortgangsbalk kolom -->
      <TableColumn fx:id="progressColumn" text="Progress" prefWidth="150">
        <cellValueFactory>
          <PropertyValueFactory property="progress"/>
        </cellValueFactory>
      </TableColumn>
    </columns>
  </TableView>

  <!-- Knoppen voor bestandsselectie en synchronisatie -->
  <HBox spacing="20" alignment="CENTER">
    <Button text="Select Files" onAction="#onSelectFilesClick" />
    <Button text="Start Sync" onAction="#onStartSyncClick" />
    <Button text="Pause Sync" onAction="#onPauseSyncClick" />
  </HBox>

  <!-- Statuslabel -->
  <Label fx:id="statusLabel" text="Status: Waiting for sync..." />

  <!-- Terugknop om terug te keren naar het hoofdscherm -->
  <Button text="Back to Main Screen" onAction="#goToMainScreen" />

</VBox>
